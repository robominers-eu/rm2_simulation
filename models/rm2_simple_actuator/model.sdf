<?xml version="1.0"?>
<sdf version="1.7">
  <model name="simpleActuator">
  
    <!-- INCLUDE ACTUATOR LINK -->
    <!-- Así hay un link actuator genérico que no depende de lo que haya después -->
    <link name="aLink">
      <pose>0 0 0 0 0 0</pose>
    </link>
  
    <!-- INCLUDE ACTUATOR BASE -->
    <link name="abLink">
      <pose relative_to="j_a_ba">0 0 0 0 0 0</pose>
      <inertial>
        <mass>0.2</mass>
        <inertia>
          <ixx>0.064</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.064</iyy>
          <iyz>0</iyz>
          <izz>0.00024</izz>
        </inertia>
      </inertial>
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.020</radius>
            <length>0.050</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="visual">
        <transparency>0.1</transparency>
        <geometry>
          <cylinder>
            <radius>0.020</radius>
            <length>0.050</length>
          </cylinder>
        </geometry>
          <material>
            <ambient>0.8 0.8 0.8 1</ambient>
            <diffuse>0.8 0.8 0.8 1</diffuse>
            <specular>0.8 0.8 0.8 1</specular>
          </material>
        <!--<material>
          <diffuse>0 0 0.5 0.1</diffuse>
          <ambient>0 0 0.5 0.1</ambient>
          <specular>0 0 0.5 0.1</specular>
          <emissive>0 0 0.5 0.1</emissive>
        </material>-->
      </visual>
    </link>
    
    <!-- JOINT ACTUATOR - BASE ACTUATOR -->
    <joint name="j_a_ba" type="fixed">
      <pose relative_to="aLink">0 0 0 0 0 0</pose>
      <parent>aLink</parent>
      <child>abLink</child>
    </joint>

    <!-- INCLUDE FORWARD ACTUATOR -->
    <link name="faLink">
      <pose relative_to="j_ab_fa">0 0 -0.0415 0 0 0</pose>
      <inertial>
        <mass>0.2</mass>
        <inertia>
          <ixx>0.064</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.064</iyy>
          <iyz>0</iyz>
          <izz>0.00024</izz>
        </inertia>
      </inertial>
      <collision name="collision">
        <geometry>
          <!--<mesh>
            <scale> 0.001 0.001 0.001</scale>
            <uri>model://rm2_simple_leg_actuator/meshes/leg_motor.stl</uri>
          </mesh>-->
          <cylinder>
            <radius>0.022</radius>
            <length>0.083</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="visual">
        <transparency>0.1</transparency>
        <geometry>
          <cylinder>
            <radius>0.022</radius>
            <length>0.083</length>
          </cylinder>
          <!--<mesh>
            <scale> 0.001 0.001 0.001</scale>
            <uri>model://rm2_leg/meshes/fm1_real.stl</uri>
          </mesh>-->
        </geometry>
          <material>
            <ambient>0.8 0.8 0.8 1</ambient>
            <diffuse>0.8 0.8 0.8 1</diffuse>
            <specular>0.8 0.8 0.8 1</specular>
          </material>
        <!--<material>
          <diffuse>0 0 0.5 0.1</diffuse>
          <ambient>0 0 0.5 0.1</ambient>
          <specular>0 0 0.5 0.1</specular>
          <emissive>0 0 0.5 0.1</emissive>
        </material>-->
      </visual>
    </link>
    
    <!-- JOINT ACTUATOR BASE - FORWARD ACTUATOR -->
    <joint name="j_ab_fa" type="revolute">
      <pose relative_to="abLink">0 0 -0.025 0 0 0 </pose>
      <parent>abLink</parent>
      <child>faLink</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>    

    <!-- INCLUDE BACKWARD ACTUATOR -->
    <link name="backwardActuatorLink">
      <pose relative_to="j_ab_ba">0 0 0.0415 0 0 0</pose>
      <inertial>
        <mass>0.2</mass>
        <inertia>
          <ixx>0.064</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.064</iyy>
          <iyz>0</iyz>
          <izz>0.00024</izz>
        </inertia>
      </inertial>
      <collision name="collision">
        <geometry>
          <!--<mesh>
            <scale> 0.001 0.001 0.001</scale>
            <uri>model://rm2_simple_leg_actuator/meshes/leg_motor.stl</uri>
          </mesh>-->
          <cylinder>
            <radius>0.022</radius>
            <length>0.083</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="visual">
        <transparency>0.1</transparency>
        <geometry>
          <cylinder>
            <radius>0.022</radius>
            <length>0.083</length>
          </cylinder>
          <!--<box>
            <size>0.022 0.022 0.083</size>
          </box>-->
          <!--<mesh>
            <scale> 0.001 0.001 0.001</scale>
            <uri>model://rm2_leg/meshes/fm1_real.stl</uri>
          </mesh>-->
        </geometry>
          <material>
            <ambient>0.8 0.8 0.8 1</ambient>
            <diffuse>0.8 0.8 0.8 1</diffuse>
            <specular>0.8 0.8 0.8 1</specular>
          </material>
        <!--<material>
          <diffuse>0 0 0.5 0.1</diffuse>
          <ambient>0 0 0.5 0.1</ambient>
          <specular>0 0 0.5 0.1</specular>
          <emissive>0 0 0.5 0.1</emissive>
        </material>-->
      </visual>
    </link>
    
    <!-- JOINT ACTUATOR BASE - BACKWARD ACTUATOR -->
    <joint name="j_ab_ba" type="revolute">
      <pose relative_to="abLink">0 0 0.025 0 0 0 </pose>
      <parent>abLink</parent>
      <child>backwardActuatorLink</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>  
    
    
