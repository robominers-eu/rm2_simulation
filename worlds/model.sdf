<?xml version="1.0"?>
<sdf version="1.6">
    <world name="cave_world">
        <physics name="1ms" type="ignored">
            <max_step_size>0.001</max_step_size>
            <real_time_factor>1.0</real_time_factor>
        </physics>
        <plugin filename="libignition-gazebo-physics-system.so" name="ignition::gazebo::systems::Physics"></plugin>
        <plugin filename="libignition-gazebo-user-commands-system.so" name="ignition::gazebo::systems::UserCommands"></plugin>
        <plugin filename="libignition-gazebo-scene-broadcaster-system.so" name="ignition::gazebo::systems::SceneBroadcaster"></plugin>

        <!-- FLOOR -->
        <model name="ground_plane">
            <static>true</static>
            <pose>0 0 -0.115015 0 0 0</pose>
            <link name="link">
                <collision name="collision">
                    <geometry>
                        <plane>
                            <normal>0 0 1</normal>
                        </plane>
                    </geometry>
                </collision>
                <visual name="visual">
                    <geometry>
                        <plane>
                            <normal>0 0 1</normal>
                            <size>100 100</size>
                        </plane>
                    </geometry>
                    <material>
                        <ambient>0.8 0.8 0.8 1</ambient>
                        <diffuse>0.8 0.8 0.8 1</diffuse>
                        <specular>0.8 0.8 0.8 1</specular>
                    </material>
                </visual>
            </link>
        </model>

        <light type="directional" name="sun">
            <cast_shadows>true</cast_shadows>
            <pose>0 0 10 0 0 0</pose>
            <diffuse>0.8 0.8 0.8 1</diffuse>
            <specular>0.2 0.2 0.2 1</specular>
            <attenuation>
                <range>1000</range>
                <constant>0.9</constant>
                <linear>0.01</linear>
                <quadratic>0.001</quadratic>
            </attenuation>
            <direction>-0.5 0.1 -0.9</direction>
        </light>


        <model name="rm2_body">
            <static>false</static>
            <self_collide>true</self_collide>

            <link name='baseLink'>
                <kinematic>0</kinematic>
                <pose>0 0 0 0 0 0</pose>
                <inertial>
                    <mass>5</mass>
                    <inertia>
                        <ixx>2.501</ixx>
                        <ixy>0</ixy>
                        <ixz>0</ixz>
                        <iyy>2.501</iyy>
                        <iyz>0</iyz>
                        <izz>5</izz>
                    </inertia>
                </inertial>
                <collision name='collision'>
                    <geometry>
                        <mesh>
                            <scale> 0.001 0.001 0.001</scale>
                            <uri>model://rm2_body/meshes/body_collision.stl</uri>
                        </mesh>
                    </geometry>
                    <max_contacts>10</max_contacts>
                </collision>
                <visual name='visual'>
                    <transparency>0.3</transparency>
                    <geometry>
                        <mesh>
                            <scale> 0.001 0.001 0.001</scale>
                            <uri>model://rm2_body/meshes/body_structure_blue.stl</uri>
                        </mesh>
                    </geometry>
                    <material>
                        <diffuse>0 0 0 1</diffuse>
                        <ambient>0 0 0 1</ambient>
                        <specular>0 0 0 1</specular>
                        <emissive>0 0 0 1</emissive>
                    </material>
                </visual>
                <self_collide>0</self_collide>
                <enable_wind>0</enable_wind>
            </link>


                    <link name='leg_motors_structureLink'>
                        <pose relative_to="leg_1_body_joint">0 0 0 0 0 0</pose>
                        <inertial>
                            <mass>1</mass>
                            <inertia>
                                <ixx>0.032</ixx>
                                <ixy>0</ixy>
                                <ixz>0</ixz>
                                <iyy>0.032</iyy>
                                <iyz>0</iyz>
                                <izz>0.00012</izz>
                            </inertia>
                        </inertial>
                        <collision name='collision'>
                            <geometry>
                                <box>
                                    <size>1.166 1.040 1.047</size>
                                </box>
                            </geometry>
                        </collision>
                        <visual name='visual'>
                            <transparency>0.3</transparency>
                            <geometry>
                                <mesh>
                                    <scale> 0.001 0.001 0.001</scale>
                                    <uri>model://rm2_leg/meshes/leg_motors_simple.stl</uri>
                                </mesh>
                            </geometry>
                            <material>
                                <diffuse>0 0 0 0.7</diffuse>
                                <ambient>0 0 0 0.7</ambient>
                                <specular>0 0 0 0.7</specular>
                                <emissive>0 0 0 0.7</emissive>
                            </material>
                        </visual>
                        <self_collide>0</self_collide>
                        <enable_wind>0</enable_wind>
                    </link>

                    <joint name="leg_1_body_joint" type="revolute">
                        <pose relative_to="baseLink">
                  -0.004511 0.000021 0.086269 0 0 0
                  </pose>
                        <!--POSE JOINT></POSE>-->

                        <parent>baseLink</parent>
                        <child>leg_motors_structureLink</child>
                        <axis>
                            <xyz>1 0 0</xyz>
                        </axis>
                    </joint>


                
                    <plugin filename="ignition-gazebo-joint-position-controller-system" name="ignition::gazebo::systems::JointPositionController">
                        <joint_name>leg_1_body_joint</joint_name>
                        <topic>cmd_joint</topic>
                    </plugin>

  

                <!-- 
    <model name="cave">
      <include>
        <pose>0 0 0 0 0 0</pose>
        <uri>model://cave</uri>
        <name>cave</name>
      </include>
      </model>
-->
        </model>

    </world>
</sdf>